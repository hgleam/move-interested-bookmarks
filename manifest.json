{
  "manifest_version": 2,
  "name": "evacuate-unnecessary-bookmarks",
  "version": "1.0",
  "description": "不要になったブックマークを退避するWebExtension",
  "homepage_url": "https://github.com/wild7/evacuate-unnecessary-bookmarks",
  "icons": {
  },

  "permissions": [
    "alarms",
    "bookmarks",
    "history",
    "storage"
  ],

  "page_action": {
    "default_title": "evacuate-unnecessary-bookmarks"
  },

  "options_ui": {
    "page": "./setting.html",
    "open_in_tab": true
  },

  "background": {
    "scripts": [
                "./scripts/lodash_min.js",
                "./scripts/background.js",
                "./scripts/bookmark_tracer.js",
                "./scripts/extension_bookmark_item.js",
                "./scripts/extension_history.js",
                "./scripts/formatter.js"
              ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
